function openCollection(collectionId, title, floor, volume, change, count) {
  const fullscreen = document.getElementById('collectionFullscreen');
  const titleEl = document.getElementById('fullscreenTitle');
  const floorEl = document.getElementById('fullscreenFloor');
  const volumeEl = document.getElementById('fullscreenVolume');
  const changeEl = document.getElementById('fullscreenChange');
  const countEl = document.getElementById('fullscreenCount');
  const gridEl = document.getElementById('fullscreenNftGrid');

  // Set collection info
  titleEl.textContent = title;
  floorEl.textContent = floor;
  volumeEl.textContent = volume;
  changeEl.textContent = change;
  countEl.textContent = count;

  // Clear and populate NFT grid with staggered animation
  gridEl.innerHTML = '';
  const nfts = collections[collectionId] || [];
  
  nfts.forEach((nft, index) => {
    const nftCard = document.createElement('div');
    nftCard.className = 'fullscreen-nft-card';
    nftCard.style.animationDelay = `${index * 0.1}s`;
    nftCard.innerHTML = `
      <div class="fullscreen-nft-image">
        <img src="${nft.image}" alt="${nft.name}" loading="lazy">
        <div class="fullscreen-rarity-badge rarity-${nft.rarity}">${nft.rarity}</div>
      </div>
      <div class="fullscreen-nft-info">
        <div class="fullscreen-nft-name">${nft.name}</div>
        <div class="fullscreen-nft-price">${nft.price}</div>
        <button class="fullscreen-buy-btn" onclick="buyNFT('${nft.name}', '${nft.price}')">
          Buy Now
        </button>
      </div>
    `;
    gridEl.appendChild(nftCard);
  });

  // Show fullscreen with animation
  fullscreen.classList.add('active');
  document.body.style.overflow = 'hidden';
}

function closeCollection() {
  const fullscreen = document.getElementById('collectionFullscreen');
  fullscreen.classList.remove('active');
  document.body.style.overflow = 'auto';
}

